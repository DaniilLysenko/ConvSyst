{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h2>Login</h2>
        <hr>
        {% if error %}
            <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        {% form_theme logForm 'bootstrap_4_layout.html.twig' %}
        {{ form(logForm) }}
    </div>

{% endblock %}
